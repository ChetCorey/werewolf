<p id="notice"><%= notice %></p>
<td><%= link_to '< games', games_path %></td>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.firstname %></td>
        <td><%= player.lastname %></td>
        <td><%= player.position %></td>
        <td><%= link_to 'Show', game_player_path(id: player.id) %></td>
        <td><%= link_to 'Edit', edit_game_player_path(id: player.id) %></td>
        <td><%= link_to 'Destroy', game_player_path(id: player.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Player', new_game_player_path %>
