<style type="text/css">
  .btn {
    box-shadow: 0 12px #444;
  }
  .btn:hover {
    box-shadow: 0 3px #444;
    transform: translateY(9px);
  }
  #game_window {
    position: absolute;
    top: calc(50vh - 45vw);
    left: 5vw;
    width: 90vw;
    height: 90vw;
    vertical-align: middle;
    /*transform: rotate(90deg);*/
  }
  #center_circle {
    position: absolute;
    top: 40%;
    left: 40%;
    background-color: #337ab7;
    /*line-height: 245.25px;*/
    /*transform: rotate(90deg);*/
  }
  .circle {
    /*transform: rotate(270deg);*/
    border-radius: 50%;
    border: solid 5px black;
    display: table;
    margin: 0;
  }
  .circle p {
    font-size: 8vw;
    vertical-align: middle;
    text-align: center;
    display: table-cell;
    font-family: 'MedievalSharp', cursive;
  }
  .player {
    position: absolute;
  }

  .title {
    text-align: center;
    font-size: 1000%;
  }

</style>
<div>
  <h1 class="title">Werefolf</h1>
</div>
<div id="game_window">
    <%= circle_size = 40 - (2*@players.count) %>
    <div id="center_circle" class="circle" style="left: calc(50% - <%= circle_size/2 %>%); width: <%= circle_size %>%; height: <%= circle_size %>%;">
        <p>KILL</p>
    </div>

    <% @players.each_with_index do |player, i| %>
    <% player_location = ( (360/@players.count) * i) * ( Math::PI / 180) %>
    <% y = Math.sin(player_location) * 35 %>
    <% x = Math.cos(player_location) * 35 %>

    <div
        class="player circle btn"
        id="player_id_<%= player.id %>"
        style="top: calc(<%= y %>% + 50% - <%= circle_size/2 %>%); left: calc(<%= x %>% + 50% - <%= circle_size/2 %>%); background-color: <%= player.color %>; width: <%= circle_size %>%; height: <%= circle_size %>%;">
        <p><%= player.initials %></p>
    </div>
    <% end %>
</div>
